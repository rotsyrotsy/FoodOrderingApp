@model FoodOrderingApp.Models.ExportInvoiceModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Export to PDF</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .content {
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1>Order Summary</h1>
        <p>Order ID: @Model.OrderId</p>
        <p>Total Price: @Model.TotalPrice.ToString("C")</p>

        <h2>Items</h2>
        <table>
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var basket in Model.Baskets)
                {
                    <tr>
                        <td>@basket.DishName</td>
                        <td>@basket.Price.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
