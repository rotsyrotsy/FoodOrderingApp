@page
@model RegisterModelTest
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="text-center">
    <main class="form-signin">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <h1 class="h3 mb-3 fw-bold">Create a restaurant account</h1>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show"></div>

                    @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="form-floating">
                        <input asp-for="NewRestaurant.Name" class="form-control" />
                        <label for="floatingInput">Restaurant name</label>
                        <span asp-validation-for="NewRestaurant.Name" class="form-text text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="NewRestaurant.Address" class="form-control" />
                        <label for="floatingInput">Address</label>
                        <span asp-validation-for="NewRestaurant.Address" class="form-text text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="NewUser.Email" class="form-control" type="email" placeholder="name@example.com" />
                        <label for="floatingInput">Email address</label>
                        <span asp-validation-for="NewUser.Email" class="form-text text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="NewUser.Phone" class="form-control" />
                        <label for="floatingInput">Phone number</label>
                        <span asp-validation-for="NewUser.Phone" class="form-text text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="NewUser.Password" class="form-control" type="password" placeholder="Password" />
                        <label for="floatingPassword">Password</label>
                        <span asp-validation-for="NewUser.Password" class="form-text text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" type="password"  placeholder="Password" />
                        <label for="floatingPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                    </div>

                    <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
                </form>

                <a asp-page="./Login">I already have an account.</a>

            </div>
        </div>

    </main>
    <partial name="_ValidationScriptsPartial" />
</body>
    
